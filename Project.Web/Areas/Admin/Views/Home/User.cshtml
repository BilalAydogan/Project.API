<div class="modal fade" id="depModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Department Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="inputUserId" class="form-control">
            </div>
            <div class="input-group mb-4">
                <span class="input-group-text">
                    Companies
                </span>
                <select class="form-control" id="selectCompanyId">
                    <option value="">Please Choose a Company</option>
                </select>

            </div>
            <div class="input-group mb-4">
                <span class="input-group-text">
                    Departments
                </span>
                <select class="form-control" id="selectDepartmentId"></select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="AddDepartment()">Save</button>
            </div>
        </div>
    </div>
</div>

<div id="divUsers">
</div>
<script src="~/js/admin/user.js" asp-append-version="true"></script>